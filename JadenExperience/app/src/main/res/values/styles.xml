    <style name="TopSlideMenuStyleDemo" parent="@style/SlideMenuStyleDefault">
        <item name="sm_overDrag">true</item>
        <item name="sm_menuBorder">96dp</item>
        <item name="sm_menuOverDragBorder">48dp</item>
        <item name="sm_slideRatio">0</item>
        <item name="sm_menuShadow">8dp</item>
        <item name="sm_dragEdge">48dp</item>
        <item name="sm_touchSlop">16dp</item>
        <item name="sm_maxDim">0.7</item>
        <item name="sm_velocitySlop">500</item>
        <item name="sm_animDuration">800</item>
        <item name="sm_closeEdge">0.75</item>
        <item name="sm_animInterpolator">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="BottomSlideMenuStyleDemo" parent="@style/SlideMenuStyleDefault">
        <item name="sm_overDrag">true</item>
